{
    "$schema": "https://raw.githubusercontent.com/GoogleChrome/lighthouse-ci/main/docs/lighthouserc.schema.json",
    "ci": {
        "collect": {
            "staticDistDir": "dist",
            "numberOfRuns": 2,
            "url": [
                "/index.html"
            ]
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ],
                "categories:best-practices": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ],
                "categories:seo": [
                    "error",
                    {
                        "minScore": 0.95
                    }
                ]
            }
        }
    }
}